    <servlet-mapping>
        <servlet-name>CustomerCreateServlet</servlet-name>
        <url-pattern>/CustomerCreateServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StaffCreateServlet</servlet-name>
        <url-pattern>/StaffCreateServlet</url-pattern>
    </servlet-mapping>
